

<div style="border:1px solid gray; border-radius:10px; margin:60px 0px 40px 0px;">
    <div class="row" style="margin:20px 0px 20px 10px">
        <div class="col-md-1" style="font-size:20px">
            類別
        </div>
        <div class="col-md-4">
            <select class="form-control">
                <option>請選擇</option>
                <option>1. 支出</option>
                <option>2. 收入</option>
            </select>
        </div>
    </div>
    <div class="row" style="margin:20px 0px 20px 10px">
        <div class="col-md-1" style="font-size:20px">
            金額
        </div>
        <div class="col-md-4">
            <input type="text" class="form-control">
        </div>
    </div>
    <div class="row" style="margin:20px 0px 20px 10px">
        <div class="col-md-1" style="font-size:20px">
            日期
        </div>
        <div class="col-md-4">
            <input type="text" class="form-control">
        </div>
    </div>
    <div class="row" style="margin:20px 0px 20px 10px">
        <div class="col-md-1" style="font-size:20px">
            備註
        </div>
        <div class="col-md-4">
            <textarea class="form-control" rows="3"></textarea>
        </div>
        <div class="col-md-2" style="margin:30px 0px 0px 30px">
            <button type="button" class="btn btn-default btn-lg">送出</button>
        </div>
    </div>
</div>

<table class="table">
    <tr>
        <td>#</td>
        <td>類別</td>
        <td>日期</td>
        <td>金額</td>
    </tr>
    @Html.Action("ForAccount", new { i = 1, a = 10000 })
    @Html.Action("ForAccount", new { i = 2, a = 20000 })
    @Html.Action("ForAccount", new { i = 3, a = 30000 })
    @Html.Action("ForAccount", new { i = 4, a = 30000 })
    @Html.Action("ForAccount", new { i = 5, a = 30000 })
</table>
